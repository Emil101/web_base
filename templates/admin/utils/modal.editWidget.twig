<div class="modal fade" id="editWidget">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="zmdi zmdi-collection-text"></i> {{wigTitle}} </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
                <form action="{{path_for('addWidget')}}" id="editWidgetForm" class="form widget-form">
                    <div class="row">
                            <div class="col-12">
                                    <strong> ID :: {{wigId}} </strong>
                                    <input type="hidden" value="{{wigId}}" name="form[widget][id]"></div>
                            <div class="col-6">
                            <fieldset>
                                <legend>widget info</legend>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="type">Type</label>
                                            <select name="type" name="form[widget][type]" disabled class="form-control" id="wcg-type">
                                                <option value="static">Static</option>
                                                <option value="dynamic">Dynamic</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="title">Title</label>
                                            <input type="text" class="form-control" required name="form[widget][title]" value="{{wigTitle}}" placeholder="Widget Title / Name" id="cwg-title">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="class"> Class</label>
                                            <input type="text" name="form[widget][class]" value="{{wigClass}}" required class="form-control" placeholder="['row widget','col-12']">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="class"> DOM</label>
                                            <input type="text" name="form[widget][dom]" value="{{wigTag}}" required class="form-control" placeholder="div">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                        <div class="col-6">
                            <fieldset>
                                <legend>Widget Title</legend>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="class"> Class</label>
                                            <input type="text" name="form[widgetTitle][class]" value="{{wTtClass}}" class="form-control" placeholder="eg. widgetTitle">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="class"> DOM</label>
                                            <input type="text" name="form[widgetTitle][dom]" value="{{wTtDom}}" class="form-control" placeholder="eg. div">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="title">Content</label>
                                            <input type="text" class="form-control" value="{{wTtContent}}" name="form[widgetTitle][content]" placeholder="eg. Title Content">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label for="title">Icon</label>
                                            <input type="text" class="form-control" value="{{wTtIcon}}" name="form[widgetTitle][icon]" placeholder="eg. fa fa-***">
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </div>
                    <fieldset>
                        <legend>Widget Body</legend>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-input">
                                    <label for="wigChildx">
                                        <input type="checkbox" name="form[widgetBody][children]" {{ WigChild ? "checked" : "" }} value="true" id="wigChildx">
                                        Has Child Widget
                                    </label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="class"> Class</label>
                                    <input type="text" name="form[widgetBody][class]" value="{{wBoClass}}" class="form-control" placeholder="eg. widgetBody">
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-group">
                                    <label for="class"> DOM</label>
                                    <input type="text" name="form[widgetBody][dom]" value="{{wBoDom}}" class="form-control" placeholder="eg. div">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="title">Content</label>
                                    <textarea rows="" class="form-control ckeditor" id="wigEditContent1" name="form[widgetBody][content]" cols="">{{wBoContent}}</textarea>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <div class="row full-width">
                            <div class="col-lg-7">
                                <div id="wig-msg" class="text-right" ></div>
                            </div>
                            <div class="col-lg-5 text-right">
                                <button type="submit" class="btn btn-primary"> <i class="zmdi zmdi-save"></i> Save</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>